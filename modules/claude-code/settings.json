{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "claude-opus-4-1-20250805",
  "statusLine": {
    "items": [
      {
        "type": "text",
        "text": "Percentage until next compact: "
      },
      {
        "type": "tokensUntilCompactPercentage"
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cat:*)",
      "Bash(python -m:*)",
      "Bash(lsd:*)",
      "WebFetch(domain:github.com)",
      "mcp__serena"
    ],
    "deny": [
      "Read(./.envrc.local)"
    ]
  }
}
