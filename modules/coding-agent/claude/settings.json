{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cat:*)",
      "Bash(python -m:*)",
      "Bash(lsd:*)",
      "WebFetch(domain:github.com)",
      "mcp__serena"
    ],
    "deny": [
      "Read(./.envrc.local)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/custom-scripts/statusline-script.sh",
    "padding": 0
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [{
          "type": "command",
          "command": "pw-play ~/.claude/sound/cartoon-tiptoe-marimba-om-fx-1-00-03.mp3"
        }]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [{
          "type": "command",
          "command": "pw-play ~/.claude/sound/notification-digital-ting-vadi-sound-1-00-00.mp3"
        }]
      }
    ]
  },
  "extraKnownMarketplaces": {
    "claude.bds": {
      "source": {
        "source": "github",
        "repo": "breakds/claude.bds"
      }
    }
  },
  "enabledPlugins": {
    "bds-dev@claude.bds": true
  }  
}
